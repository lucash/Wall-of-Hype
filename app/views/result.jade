extends layouts/layout
block content
    div.well
        h1.centered Ergebnis
        h1.centered total votes: #{poll.totalVotes}
        table#resultTable
          thead
            tr
              td Name
              td # Votes
              td %
          tbody
            each option in poll.options
              tr
                - var v = Math.round((option.votes*100)/poll.totalVotes)/100
                td #{option.title}
                td #{option.votes}
                td #{v}


        script.
          $(document).ready(function(){
            $('#resultTable').DataTable({
              "order": [[1, "desc"]],
               "iDisplayLength": 200,
            });
          });
